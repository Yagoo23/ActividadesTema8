{% extends 'base.html.twig' %}

{% block title %}Hello NotaController!
{% endblock %}

{% block body %}
	<div class="example-wrapper">
		<h1 class="text-info">Hello
			{{ controller_name }}! ✅</h1>

		<table class="table">
			<thead>
				<th>ID</th>
				<th>Título</th>
				<th>Descripción</th>
			</thead>
			{% for nota in notas %}
				<tr>
					<td>{{ nota.id }}</td>
					<td>{{ nota.titulo }}</td>
					<td>{{ nota.descripcion }}</td>
				</tr>
			{% endfor %}
		</table>
	</div>
{% endblock %}
